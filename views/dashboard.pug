extends layout 

block content

     body
        .dashboardheading
            h6(style='font-size: 40px;')  Cars Washed & Amount
        br
        form.search(action='/dashboard')
                div.form-row
                    div.col-md-8
                        input.form-control(type="date" name="searchdate" value=defaultDate)
                    div.col-md-4
                        input.btn.btn-primary.btn-block(type="submit")
        br        

        table.table.table-bordered.shadow-lg
            thead.dashboardhead 
                tr
                    th Names 
                    th Number of cars 
                    th Payout Amount 
            tbody
            if washers.length 
                each washer in washers
                    tr.dashboardtr 
                        td #{washer.details[0].fullname}
                        td #{washer.count}
                        td #{washer.totalPayout}
                tr
                    th(colspan=2) Total Payout 
                    td #{new Intl.NumberFormat().format(sumPayout.totalPayoutPerDay)}
