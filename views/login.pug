extends layout 

block content
    nav.navbar.navbar-expand-lg.navbar-.lighter.bg-light(style='margin-top: 20px;')
        .container-fluid
            a.navbar-brand(href='#')
            strong ZaCAR Wash
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                    a.nav-link(aria-labelledby='navbarDropdown' href='Dashboard.html')
                        | Dash Board
                        span.sr-only
                ul.navbar-nav
                    li#nav-home.nav-item
                    a.nav-link(href='/carwashtracking') CarWash Tracker
                    li#nav-signup.nav-item
                    a.nav-link(href='/register') Register
    .container
        .row
            .col-12.mx-auto.shadow-lg.p-md-4.p-5
                .row.align-items-center
                    .col-md-5.col-5.d-none.d-md-inline-block
                        img.resize(src='./Images/black-man-holds-microfiber-hand-polishes-car-auto-service_183219-2508.jpeg')
                    .col-md-1.col-1
                    .col-md-6.col-6
                        h1#zarwash.mb-4 ZaCAR WASH
                        form.form(name='login' action='/' method='POST')
                            div
                            input#email.form-control.form-control-lg.mb-3(aria-label='Email' type='email' name='useremail' placeholder='Email Address' size='30px')
                            small#error1
                            div
                            input#password.form-control.form-control-lg.mb-3(aria-label='password' type='password' name='password' placeholder='Password' size='30px')
                            small#error2
                            div
                            button.btn.btn-dark.btn-lg(type='submit') Login
                        span.forgot-password
                            a#link-reset(href='#' title='Forgot Password') Forgot Password?
                            br
                            br
                            .text-centre
                            p
                                | Click 
                                a(href='/register') Register
                                |  to create an account
            div
            span.copyright &copy;Designed by fredkwesiga 
