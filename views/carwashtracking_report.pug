extends layout

block content
    body 
        br
        form.search(action='/reports/carwashtracking')
            div.form-row
                div.col-md-8
                    input.form-control(type="date" name="searchdate" value=defaultDate)
                div.col-md-4
                    input.btn.btn-primary.btn-block(type="submit")
        br
        table.table.table-bordered 
            thead
                tr
                    th Date of Arrival
                    th Vehicle
                    th Amount
            tbody
            if collections.length
                each collection in collections
                    tr
                        td #{moment(collection.dateArrived).format('DD-MM-YYYY hh:mm')}
                        td #{collection.carnumberplate}
                        td #{collection.packagePrice}
                tr
                    th(colspan=2) Total Collections
                    td #{new Intl.NumberFormat().format(total.totalCollection)}